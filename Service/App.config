<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<appSettings>
		<!-- pragovi (tačka 1 spominje V_threshold, Z_threshold, +/-25%) -->
		<add key="V_threshold" value="0.25"/>
		<add key="Z_threshold" value="0.25"/>
		<add key="PercentDeviation" value="25"/>
		<!-- korenski data folder -->
		<add key="DataRoot" value="Data"/>
	</appSettings>

	<system.serviceModel>
		<services>
			<service name="Battery.Service.EisIngestService">
				<host>
					<baseAddresses>
						<add baseAddress="net.tcp://localhost:4000"/>
					</baseAddresses>
				</host>
				<endpoint address="EisIngest"
						  binding="netTcpBinding"
						  bindingConfiguration="tcpLarge"
						  contract="Battery.Common.IEisIngestService"/>
				<endpoint address="mex" binding="mexTcpBinding" contract="IMetadataExchange"/>
			</service>
		</services>

		<bindings>
			<netTcpBinding>
				<binding name="tcpLarge" transferMode="Streamed"
						 maxReceivedMessageSize="10485760"
					
					receiveTimeout="00:10:00" sendTimeout="00:10:00">
					<readerQuotas maxDepth="64" maxStringContentLength="1048576"
								  maxArrayLength="1048576" maxBytesPerRead="4096"
								  maxNameTableCharCount="16384"/>
					<security mode="None"/>
				</binding>
			</netTcpBinding>
		</bindings>

		<behaviors>
			<serviceBehaviors>
				<behavior>
					<serviceDebug includeExceptionDetailInFaults="true"/>
				</behavior>
			</serviceBehaviors>
		</behaviors>
	</system.serviceModel>
</configuration>
