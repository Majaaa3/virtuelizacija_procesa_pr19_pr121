<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<appSettings>
		<add key="DataRoot" value="Data"/>
	</appSettings>

	<system.serviceModel>
		<services>
			<!-- DODAJ behaviorConfiguration -->
			<service name="Service.EisIngestService" behaviorConfiguration="SvcBeh">
				<host>
					<baseAddresses>
						<add baseAddress="net.tcp://localhost:4000/"/>
					</baseAddresses>
				</host>

				<endpoint address="EisIngest"
						  binding="netTcpBinding"
						  bindingConfiguration="tcpLarge"
						  contract="Common.IEisIngestService" />

				<!-- MEX endpoint -->
				<endpoint address="mex" binding="mexTcpBinding" contract="IMetadataExchange"/>
			</service>
		</services>

		<bindings>
			<netTcpBinding>
				<binding name="tcpLarge" transferMode="Streamed" maxReceivedMessageSize="10485760">
					<security mode="None"/>
				</binding>
			</netTcpBinding>
		</bindings>

		<behaviors>
			<serviceBehaviors>
				<!-- DODAJ serviceMetadata u behavior -->
				<behavior name="SvcBeh">
					<serviceMetadata />
					<serviceDebug includeExceptionDetailInFaults="true"/>
				</behavior>
			</serviceBehaviors>
		</behaviors>
	</system.serviceModel>
</configuration>
